FROM ghcr.io/matias-pizarro/freebsd-oci-containers/python:freebsd14.3

ENV UV_VERSION=0.9.6

RUN set -eux; \
    /usr/bin/env pkg install -yr FreeBSD-ports\
    devel/py-uv@py310 \
    devel/py-uv-build@py310 \
    devel/py-uv-bump@py310 \
    devel/py-uv-dynamic-versioning@py310; \
    /usr/local/bin/uv --version; \
    /bin/rm -rf /var/db/pkg/*; \
    /bin/rm -f /var/cache/pkg/*

CMD ["uv"]