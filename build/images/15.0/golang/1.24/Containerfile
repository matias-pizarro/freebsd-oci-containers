FROM ghcr.io/matias-pizarro/freebsd-oci-containers/freebsd-zfs:15.0

ENV PATH /usr/local/go/bin:$PATH

ENV GOLANG_VERSION 1.24.9
ENV PORT_VERSION 1.24.9_0

RUN set -eux; \
    /usr/bin/env pkg install -yr FreeBSD-ports \
    lang/go124; \
    for src in $(ls /usr/local/go124/bin); do \
        ln -sv "/usr/local/go124/bin/$src" "/usr/local/bin/"; \
    done; \
# smoke test
    go version; \
    go124 version; \
    /bin/rm -rf /var/db/pkg/*; \
    /bin/rm -f /var/cache/pkg/*

# don't auto-upgrade the gotoolchain
# https://github.com/docker-library/golang/issues/472
ENV GOTOOLCHAIN=local

ENV GOPATH /go
ENV PATH $GOPATH/bin:/usr/local/go124/bin:$PATH
RUN mkdir -p "$GOPATH/src" "$GOPATH/bin" && chmod -R 1777 "$GOPATH"
WORKDIR $GOPATH