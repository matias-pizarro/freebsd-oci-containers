FROM ghcr.io/matias-pizarro/freebsd-oci-containers/freebsd-python3.12:16.snap

ENV UV_VERSION=0.9.6

RUN set -eux; \
    /usr/bin/env pkg install -yr FreeBSD \
    devel/py-uv@py312 \
    devel/py-uv-build@py312 \
    devel/py-uv-bump@py312 \
    devel/py-uv-dynamic-versioning@py312; \
    /usr/local/bin/uv --version; \
    /bin/rm -f /var/cache/pkg/*

CMD ["uv"]
